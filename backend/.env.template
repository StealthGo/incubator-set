# Environment Variables Template
# Copy this to .env and fill in your actual values

# Database
MONGODB_URI=mongodb://localhost:27017

# JWT Configuration
JWT_SECRET_KEY=your_super_secret_jwt_key_here

# Google Gemini AI
GEMINI_API_KEY=your_gemini_api_key_here

# Render Deployment (optional)
RENDER_SERVICE_URL=http://localhost:8000
RENDER=false

# Payment Gateway Configuration

# Razorpay (for Indian payments)
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Stripe (for international payments)  
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Instructions:
# 1. Rename this file to .env
# 2. Replace all placeholder values with your actual API keys
# 3. Keep this file secure and never commit it to version control
# 4. For production, use live API keys instead of test keys
